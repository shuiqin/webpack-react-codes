var chai = require('chai');
var expect = chai.expect;

//moca用describe来描述一组测试内容
describe('some simple tests', function(){
  it('test equal', function(){//it方法来描述一个单独的测试用例
    //测试相等
    expect(4+5).to.equal(10);
  })

  it('test not equal', function(){//it方法来描述一个单独的测试用例
    //测试相等
    expect(4+5).to.not.equal(10);
  })

  it('test object equal', function(){//it方法来描述一个单独的测试用例
    //测试对象相等 对象默认是 ===
    expect({'name': 'viking'}).to.not.equal({'name': 'viking'});

    //使用deep以后 不是比较引用 而是比较值是否一一相等
    expect({'name': 'viking'}).to.deep.equal({'name': 'viking'});

  })
});

